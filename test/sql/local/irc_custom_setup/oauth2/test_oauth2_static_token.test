# name: test/sql/local/irc_custom_setup/oauth2/test_oauth2_static_token.test
# description: Ensure static tokens without expiry info continue to work
# group: [oauth2]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

set ignore_error_messages

# Create S3 storage secret
statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

# First, get a valid token from the OAuth endpoint
statement ok
CREATE SECRET iceberg_with_token (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    OAUTH2_SERVER_URI 'http://127.0.0.1:8181/v1/oauth/tokens'
);

# This should work exactly as before -- no refresh attempted on a static token
statement ok
ATTACH '' AS static_lake (
    TYPE ICEBERG,
    SECRET iceberg_with_token,
    ENDPOINT 'http://127.0.0.1:8181'
);

query I
SELECT count(*) FROM static_lake.default.supplier;
----
10000

statement ok
DETACH static_lake;

statement ok
DROP SECRET iceberg_with_token;

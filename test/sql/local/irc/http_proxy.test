# name: test/sql/local/irc/http_proxy.test
# description: Test http proxy
# group: [irc]

require-env HTTP_PROXY_PUBLIC

# shouldn't run on cloud testing
require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

# override the default behaviour of skipping HTTP errors and connection failures: this test fails on connection issues
set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

# Extra proxy parameters neded here because of local MinIO testing
statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0,
    http_proxy '${HTTP_PROXY_PUBLIC}',
    VERIFY_SSL 0
);

statement ok
SET ca_cert_file = '~/.mitmproxy/mitmproxy-ca-cert.pem';

statement ok
CREATE SECRET http_proxy (
    TYPE HTTP,
    http_proxy '${HTTP_PROXY_PUBLIC}'
);

statement ok
ATTACH '' AS my_datalake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    ENDPOINT 'http://127.0.0.1:8181'
);


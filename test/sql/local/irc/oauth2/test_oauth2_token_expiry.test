# name: test/sql/local/irc/oauth2/test_oauth2_token_expiry.test
# description: Test that OAuth2 token expiry is tracked from the token response
# group: [oauth2]

require-env ICEBERG_SERVER_AVAILABLE

require avro

require parquet

require iceberg

require httpfs

set ignore_error_messages

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

# Create S3 storage secret for MinIO
statement ok
CREATE SECRET (
    TYPE S3,
    KEY_ID 'admin',
    SECRET 'password',
    ENDPOINT '127.0.0.1:9000',
    URL_STYLE 'path',
    USE_SSL 0
);

# Attach using OAuth2 client credentials
statement ok
ATTACH '' AS expiry_lake (
    TYPE ICEBERG,
    CLIENT_ID 'admin',
    CLIENT_SECRET 'password',
    OAUTH2_SERVER_URI 'http://127.0.0.1:8181/v1/oauth/tokens',
    ENDPOINT 'http://127.0.0.1:8181'
);

# Verify the initial token fetch happened
query I
SELECT count(*) FROM duckdb_logs_parsed('HTTP')
WHERE request.type = 'POST'
  AND request.url LIKE '%oauth/tokens%';
----
1

# Query should work with valid token
query I
SELECT count(*) FROM expiry_lake.default.supplier;
----
10000

statement ok
DETACH expiry_lake;

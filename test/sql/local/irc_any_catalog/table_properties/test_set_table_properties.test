# name: test/sql/local/irc_any_catalog/table_properties/test_set_table_properties.test
# group: [table_properties]

require-env ICEBERG_SERVER_AVAILABLE

require-env SECRETS_CREATED_AND_CATALOG_ATTACHED

require avro

require parquet

require iceberg

require httpfs

require core_functions

statement ok
CALL enable_logging('HTTP');

statement ok
set logging_level='debug';

statement ok
drop table if exists my_datalake.default.test;

statement ok
create table if not exists my_datalake.default.test as select range a from range(100);

statement ok
CALL set_iceberg_table_properties(my_datalake.default.test,
    {
    'write.update.mode' : 'copy-on-write',
    'write.delete.mode' : 'copy-on-write',
    'foo' : 'buzz',
    'page-write-size': '10000'
    }
);

statement error
CALL set_iceberg_table_properties(my_datalake.default.test,'blah');
----
<REGEX>:.*Invalid Input Error.*Failed to cast value.*

statement error
CALL set_iceberg_table_properties(my_datalake.default.test,1000);
----
<REGEX>:.*Invalid Input Error.*Failed to cast value.*

# test deleting table properties
statement ok
CALL remove_iceberg_table_properties(my_datalake.default.test, ['foo']);

query II
select * from iceberg_table_properties(my_datalake.default.test) where key not like '%created-at%' order by all;
----
page-write-size	10000
write.delete.mode	copy-on-write
write.parquet.compression-codec	zstd
write.update.mode	copy-on-write


# table property is copy-on-write, so there is an error
statement error
delete from my_datalake.default.test where a %2 = 0;
----
<REGEX>:.*Not implemented Error.*write.delete.mode.*copy-on-write.*test.*

# set the table property to merge on read
statement ok
CALL set_iceberg_table_properties(my_datalake.default.test,
       {
        'write.delete.mode' : 'merge-on-read',
        });

# table property is now merge on read, so there is no error
statement ok
delete from my_datalake.default.test where a %2 = 0;

query I
select count(*) from my_datalake.default.test;
----
50

query II
select * from iceberg_table_properties(my_datalake.default.test_table_properties) where "key" not in ('created-at', 'owner') order by all;
----
another1	neato
duckdb_man	superman
read.split.target-size	268435456
write.delete.mode	merge-on-read
write.parquet.compression-codec	zstd


